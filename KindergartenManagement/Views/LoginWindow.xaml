<Window x:Class="KindergartenManagement.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:KindergartenManagement.Converters"
        mc:Ignorable="d"
        Title="ÄÄƒng nháº­p - Há»‡ thá»‘ng quáº£n lÃ½ máº§m non"
        Height="620" Width="520"
        MinHeight="580" MinWidth="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="{StaticResource BackgroundColor}">
    
    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Border Background="{StaticResource SurfaceColor}"
                    CornerRadius="10"
                    Margin="20"
                    Padding="40">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" 
                                    ShadowDepth="0" 
                                    Opacity="0.2"/>
                </Border.Effect>
            
                <StackPanel>
                <!-- Logo/Title -->
                <TextBlock Text="ðŸ«"
                          FontSize="60"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,20"/>
                
                <TextBlock Text="Há»‡ thá»‘ng quáº£n lÃ½ máº§m non"
                          FontSize="20"
                          FontWeight="Bold"
                          Foreground="{StaticResource PrimaryColor}"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,40"/>

                <!-- Username -->
                <TextBlock Text="TÃªn Ä‘Äƒng nháº­p"
                          FontSize="14"
                          Foreground="{StaticResource TextSecondaryColor}"
                          Margin="0,0,0,5"/>
                
                <TextBox x:Name="UsernameTextBox"
                    Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                    FontSize="14"
                    Margin="0,0,0,20"/>

                <!-- Password -->
                <TextBlock Text="Máº­t kháº©u"
                          FontSize="14"
                          Foreground="{StaticResource TextSecondaryColor}"
                          Margin="0,0,0,5"/>
                
                <PasswordBox x:Name="PasswordBox"
                            FontSize="14"
                            Margin="0,0,0,10"
                            PasswordChanged="PasswordBox_PasswordChanged"/>

                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}"
                          Foreground="{StaticResource DangerColor}"
                          FontSize="12"
                          Margin="0,0,0,20"
                          TextWrapping="Wrap"
                          Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                <!-- Login Button -->
                <Button Content="ÄÄƒng nháº­p"
                       Command="{Binding LoginCommand}"
                       Style="{StaticResource PrimaryButton}"
                       Height="45"
                       Margin="0,10,0,0"
                       IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"/>

                <!-- Loading Indicator -->
                <StackPanel Orientation="Horizontal"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,0"
                           Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="Äang Ä‘Äƒng nháº­p..."
                              FontSize="12"
                              Foreground="{StaticResource TextSecondaryColor}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </ScrollViewer>
