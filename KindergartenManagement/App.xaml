<Application x:Class="KindergartenManagement.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:KindergartenManagement.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Colors.xaml"/>
                <ResourceDictionary Source="Styles/Buttons.xaml"/>
                <ResourceDictionary Source="Styles/ScrollBars.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <converters:DayOfWeekToVietnameseConverter x:Key="DayOfWeekToVietnameseConverter"/>
            <converters:PageToTagConverter x:Key="PageToTagConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
